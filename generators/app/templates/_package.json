    "deploy": "npm run build && gh-pages -d ./build"
  },
  "dependencies": {
    "idyll": "~1.3.0",
    "idyll-default-components": "^1.0.0"
  },
  "devDependencies": {
    "gh-pages": "^0.12.0"
  }
}
